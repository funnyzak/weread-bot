# 微信读书阅读机器人配置文件
# https://github.com/funnyzak/weread-bot
# 配置优先级：环境变量 > config.yaml > 默认值
# 你可以访问： https://weread.gh.yycc.dev/config-generator.html ，通过图形界面生成配置文件

app:
  name: WeReadBot
  startup_mode: scheduled
  startup_delay: 1-10
curl_config:
  file_path: curl_command.txt
reading:
  mode: smart_random
  target_duration: 50-70
  reading_interval: 25-35
  smart_random:
    book_continuity: 0.8
    chapter_continuity: 0.7
    book_switch_cooldown: 300
human_simulation:
  enabled: true
  break_probability: 0.15
  break_duration: 30-180
network:
  timeout: 30
  retry_times: 3
notification:
  enabled: true
  include_statistics: true
  channels:
    - name: wxpusher
      enabled: true
      config:
        spt: SPT_knbgNJypYhLfuxdDEYApFKhWpPdd
schedule:
  enabled: true
  cron_expression: 0 9 * * *
  timezone: Asia/Beijing
logging:
  level: INFO
  format: detailed
  file: logs/weread.log
  console: true



